<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="MessageBox" HorizontalAlignment="Center" TextWrapping="Wrap" Height="30" VerticalAlignment="Bottom" Margin="0, 0, 180, 20" Width="320"/>
        <Button Content="Отправить" HorizontalAlignment="Center" Margin="350,0,0,20" VerticalAlignment="Bottom" Height="30" Width="120" Click="Button_Click"/>
        <TextBlock x:Name="ChatBlock" HorizontalAlignment="Center" Margin="0,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="323" Width="724"/>
        <TextBox x:Name="NameBox" HorizontalAlignment="Left" Margin="63,10,0,0" TextWrapping="Wrap" Text="Введите имя:" VerticalAlignment="Top" Width="264" Height="25"/>

    </Grid>
</Window>
